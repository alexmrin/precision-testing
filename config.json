{
    "num_classes": 10,

    "lr": 0.0003,
    "batch_size": 128,
    "num_epochs": 100,
    "optimizer": "AdamW",
    "loss_function": "CrossEntropyLoss",
    "weight_decay": 0.005,
    
    "dataset": "CIFAR10",
    "train_split": 0.8,
    "shuffle": true,
    "normalization": {
        "mean": [0.5071, 0.4867, 0.4408],
        "std": [0.2675, 0.2565, 0.2761]
    },
    "augmentation": {
        "random_horizontal_flip": 0.5,
        "random_rotation": 15
    },

    "checkpoint_frequency": 10,
    "save_path": "./models/resnet50_cifar100/"
}